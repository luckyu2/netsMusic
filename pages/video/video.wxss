/* pages/video/video.wxss */
.vider-box .heder{
  display: flex;
  padding: 16rpx;
  margin-bottom: 10rpx;
}
.vider-box .heder image{
  width: 60rpx;
  height: 60rpx;
}
.vider-box .heder .search{
  flex: 1;
  border: 2rpx solid #eee;
  text-align: center;
  color: #d43c33;
  line-height: 60rpx;
  margin: 0 20rpx;
  background-color: #f5f5f5;
}
.nav-scroll{
  padding-left:30rpx;
  margin-right:  30rpx;
  display: flex;
  height: 60rpx;
  white-space: nowrap;
}
.nav-scroll .navitem:last-child {
  padding-right: 30rpx;
}
.navitem{
  margin: 0 26rpx;
}
.nav-scroll .navitem .nav-content{
  padding-bottom: 10rpx;
}
.active{
  border-bottom: 6rpx solid #d43c33;
}
/*视频区域*/
.video-group{
  background-color: #fbfbfb;
}
.video-group .video-content{
  margin-bottom: 24rpx;
  padding: 0 3%;
  background-color: #fff;
}
.video-top{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  background-color: #FFF;
}
.video-top .video-top-left image{
  vertical-align: middle;
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}
.video-top .video-top-left text{
  display: inline-block;
  line-height: 80rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
}
.video-top .video-top-right  .iconfont{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666666;
}
.video-top .video-top-right .iconfont::before {
  color: #666666;
  font-size: 32rpx;
  line-height: 60rpx;
}
.video-top .video-top-right .iconfont:last-child{
  display: inline-block;
  width: 40rpx;
  height: 60rpx;
  color: #666666;
  font-size: 42rpx;
  line-height: 60rpx;
  text-align: left;
  border: 1px solid #fff;
  margin-left: 0rpx;
  padding-top: 10rpx;
}
  /*视频内容*/
.video-group {
  height: calc(100vh - 170rpx);
}
.video-group .video-item .title text {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 60rpx;
}
.video-group .video-item video{
  width: 100%;
  height:360rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.video-group .video-item  image{
  width: 100%;
  height:360rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

