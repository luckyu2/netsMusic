/* pages/personal/personal.wxss */
.profile{
  height: 100%;
}
.loginTop{
  position: fixed;
  top: -10rpx;
  left: 5%;
  height: 350rpx;
  width: 100%;
  padding-bottom: 100rpx;
}
.background{
  width: 100%;
  top: 0;
  left: 0;
  height: 45%;
  position:fixed;
  background-size:100% 100%;
  z-index: -99;
}

.user{
  position: absolute;
  top: 180rpx;
  display: flex;
  z-index: 9;
}
.user image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f9e6b3;
  z-index: -1;
}
.user text{
  margin-left: 20rpx;
  line-height: 120rpx;
}
/*vip部分*/
.loginTop .vip-card{
  position: absolute;
  margin-right: 20rpx;
  top: 320rpx;
  height: 360rpx;
  width: 700rpx;
  background-color: rgba(59, 52, 52, 0.6);
  border-radius: 30rpx;
  z-index: -1;
}
 .background-vip{
  position: absolute;
   height: 150rpx;
   width: 50%;
  top:0;
  right: 0;
  bottom: 0;
  z-index: -2;
}
.loginTop .vip-card .header {
  position: relative;
  font-size: 30rpx;
}
.header .titer{
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  color: #f9e6b3;
}
.header .titer .more{
  border: 1rpx solid #999;
  border-radius: 15rpx;
  font-size: 22rpx;
  padding: 6rpx 10rpx;
  color: #000;
  background-color: #f9e6b3;
}
/*下边部分*/
.profile .topyuan{
  position: relative;
  top: -80rpx;
  width: 100%;
  height: 60rpx;
  z-index: 5;
  /*border-bottom: 500rpx solid #f5f5f5;*/
}
 .content{
  width: 100%;
  height: 65%;
  z-index: 99;
}
.profile .conten-bgc{
  position: absolute;
  top: 45%;
  width: 100%;
  height: 75%;
  background-color:#f5f5f5;
  padding-top: 40rpx;
}
/*最近播放*/
.playNav{
  float: left;
  margin-bottom: 16rpx ;
}
.profile .conten-bgc .content-list{
  margin-top: -70rpx;
}
.recommend-content{
  display: flex;
  height: 240rpx;
  margin-left: -30rpx;
  box-sizing: border-box;
}
 .conten-item{
  padding-top: -100rpx;
  width: 200rpx;
  height: 800rpx;
  margin: 0 10rpx;
}
.conten-item image{
  width: 200rpx;
  height: 200rpx;
}
.conten-item text{
  text-align: center;
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}
.conten-item{
  width: 90%;
  margin-left: 5%;
}
.user-info{
  display: flex;
  background-color: #FFF;
  border-radius: 3%;
  padding: 10rpx 0;
}
.user-info-item{
  display: flex;
  width: 25%;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  padding: 20rpx 0;
}
.user-info-item .iconfont{
  margin-bottom: 10rpx;
  color: #d43c33;
  font-size: 50rpx;
}
.user-list{
    font-size: 30rpx;
}
.user-list .titer{
  background-color: #FFF;
  border-radius: 3%;
  padding: 26rpx 0;
  padding-left: 30rpx;
  margin-top: 10rpx;
}
.user-list .titer-right{
  float: right;
  padding-right: 10rpx;
  font-size: inherit;

}